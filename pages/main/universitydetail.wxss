page {
  background-color: #fff;
  height: 100%;
}

.parent {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.header_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  height: 100rpx;
  position: fixed;
  top: 0rpx;
  right: 0rpx;
  left: 0rpx;
}

.content_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  margin-top: 100rpx;
}

.content_view_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.content_view_view_brief_introduction_view {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  padding: 20rpx;
}

.content_view_view_brief_introduction_view_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #666;
  letter-spacing: 2rpx;
}

.content_view_view_enrolment_plan_view {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
}

.content_view_view_enrolment_plan_view_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #666;
}

.content_view_view_major_view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20rpx;
}

.content_view_view_major_view_view {
  padding-bottom: 20rpx;
  padding-right: 20rpx;
}

.content_view_view_major_view_text {
  font-size: 30rpx;
  color: #8087f5;
  font-weight: 400;
  border-width: 2rpx;
  text-align: center;
  border-style: solid;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-color: #f5f5f5;
}
