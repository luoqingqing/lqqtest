page {
  background-color: #fff;
  height: 100%;
}

.parent {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.content {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  margin-bottom: 160rpx;
}

.title_text {
  margin-top: 20rpx;
  font-weight: 600;
  width: 750rpx;
  font-size: 30rpx;
  text-align: center;
  color: #333;
}

.introduce_text {
  padding: 20rpx;
  font-weight: 400;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  color: #666;
}

.content_panel_view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-content: center;
  margin-left: 20rpx;
  align-items: center;
}

.content_panel_view_img {
  width: 40rpx;
  height: 40rpx;
}

.content_panel_view_text {
  font-weight: 400;
  font-size: 34rpx;
  margin-left: 10rpx;
  color: #333;
}

.footer_view {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  position: fixed;
  height: 100rpx;
  align-content: center;
  align-items: center;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  background-color: #fff;
  padding: 20rpx;
}

.button {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #8087f5;
  width: 670rpx;
  font-size: 30rpx;
  color: #fff;
}

.btn_hover {
  background-color: #f5f5f5;
}
