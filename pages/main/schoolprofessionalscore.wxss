page {
  background-color: #fff;
  height: 100%;
}

.parent {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-content: center;
  align-items: center;
  justify-content: center;
  justify-items: center;
}

.header_view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20rpx;
}

.header_view_text {
  width: 170rpx;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: #999;
  background-color: #f5f5f5;
  flex-grow: 1;
}

.content_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-content: center;
  align-items: center;
  justify-content: center;
  justify-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.content_view_view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-top: 2rpx;
}

.content_view_view_text {
  width: 170rpx;
  font-size: 30rpx;
  font-weight: 400;
  text-align: center;
  color: #666;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #f5f5f5;
}
