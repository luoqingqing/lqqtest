page {
  background-color: #f5f5f5;
  height: 100%;
}

.sc_view {
  background-color: #fff;
}

.parent {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.space_view {
  width: 100%;
  height: 10rpx;
  background-color: #f5f5f5;
}

.header_view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20rpx;
}

.header_view_img {
  width: 160rpx;
  height: 220rpx;
}

.header_view_view {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  margin-left: 20rpx;
}

.header_view_text {
  font-size: 30rpx;
  font-weight: 600;
  color: #666;
}

.header_view_view_view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.header_view_view_tip_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #999;
}

.content_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.content_view_flag_view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-left: 20rpx;
  align-items: center;
}

.content_view_flag_view_space {
  width: 10rpx;
  height: 30rpx;
  background-color: #8087f5;
}

.content_view_flag_view_text {
  font-size: 30rpx;
  font-weight: 600;
  color: #666;
  margin-left: 20rpx;
}

.content_lesson_introduction_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  margin: 20rpx;
}

.timetable_view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20rpx;
}

.timetable_view_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-right: 20rpx;
  align-items: center;
}

.timetable_view_view_img {
  width: 160rpx;
  height: 220rpx;
}

.timetable_view_view_text {
  width: 160rpx;
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-top: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.footer_button {
  text-align: center;
  background-color: #8087f5;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #fff;
  margin: 40rpx;
}

.btn_hover {
  background-color: #f5f5f5;
}
