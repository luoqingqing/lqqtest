page {
  background-color: #fff;
  height: 100%;
}

.parent {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.verifying_code_view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  border: solid #f5f5f5 2rpx;
}

.phone_num_input {
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  padding: 20rpx;
  background-color: #fff;
}

.verifying_code_view_text {
  font-size: 30rpx;
  font-weight: 400;
  width: 200rpx;
  color: #8087f5;
  text-align: center;
}

.verifying_code_input {
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  padding: 20rpx;
  border-radius: 20rpx;
  border: solid #f5f5f5 2rpx;
  background-color: #fff;
  margin: 20rpx;
}

.button {
  margin-top: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  background-color: #8087f5;
  font-size: 30rpx;
  color: #fff;
}

.btn_hover {
  background-color: #f5f5f5;
}
