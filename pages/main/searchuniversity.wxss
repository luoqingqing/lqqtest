page {
  background-color: #fff;
  height: 100%;
}

.parent {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.header_view {
  display: flex;
  flex-direction: row;
  background-color: #f5f5f5;
  padding: 20rpx;
  flex-wrap: nowrap;
  align-content: center;
  align-items: center;
  justify-content: center;
  justify-items: center;
}

.input {
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  padding: 20rpx;
  border-width: 2rpx;
  border-color: #f5f5f5;
  border-style: solid;
  background-color: #fff;
  border-radius: 10rpx;
  flex-grow: 1;
}

.search_text {
  width: 100rpx;
  font-weight: 600;
  text-align: center;
  font-size: 30rpx;
  color: #8087f5;
}

.tip_text {
  color: #666;
  font-weight: 400;
  font-size: 26rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.content_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  padding: 20rpx;
}

.content_view_view_major_view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.content_view_view_major_view_view {
  padding-bottom: 20rpx;
  padding-right: 20rpx;
}

.content_view_view_major_view_text {
  font-size: 30rpx;
  color: #8087f5;
  font-weight: 400;
  border-width: 2rpx;
  text-align: center;
  border-style: solid;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-color: #f5f5f5;
}

.prompt_text {
  font-size: 30rpx;
  font-weight: 400;
  padding-top: 200rpx;
  text-align: center;
  color: #999;
}
