page {
  background-color: #f5f5f5;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.sc_view {
  background-color: #fff;
}

.parent {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.space_view {
  width: 100%;
  height: 2rpx;
  background-color: #f5f5f5;
}

.header_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.header_img {
  width: 100%;
  height: 400rpx;
}

.header_view_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}

.sc {
  display: flex;
  white-space: nowrap;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
}

.header_view_text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin: 20rpx;
}

.header_view_img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.header_teacher_view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.header_teacher_details_view {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  align-content: center;
}

.header_teacher_details_view_img {
  height: 240rpx;
  width: 180rpx;
}

.header_teacher_details_view_text {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.dialogVisible_tip_text {
  font-size: 30rpx;
  color: #666;
  font-family: Arial;
  font-weight: 400;
}

.content_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.content_view_flag_view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-left: 20rpx;
  align-items: center;
}

.content_view_flag_view_space {
  width: 10rpx;
  height: 30rpx;
  background-color: #8087f5;
}

.content_view_flag_view_text {
  font-size: 26rpx;
  font-weight: 400;
  color: #666;
  margin-left: 20rpx;
}

.content_lesson_introduction_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  margin: 20rpx;
  letter-spacing: 2rpx;
}

.timetable_view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20rpx;
}

.timetable_view_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.timetable_not_selected_text {
  font-size: 30rpx;
  font-weight: 400;
  border-radius: 2%;
  padding: 10rpx;
  color: #8087f5;
  margin-right: 20rpx;
  background: #fff;
  margin-top: 20rpx;
  border: solid #8087f5 2rpx;
}

.timetable_selected_text {
  font-size: 30rpx;
  font-weight: 400;
  border-radius: 2%;
  padding: 10rpx;
  color: #fff;
  margin-right: 20rpx;
  margin-top: 20rpx;
  background: #8087f5;
  border: solid #8087f5 2rpx;
}

.timetable_non_appointment {
  font-size: 30rpx;
  font-weight: 400;
  border-radius: 2%;
  padding: 10rpx;
  color: #fff;
  margin-right: 20rpx;
  margin-top: 20rpx;
  background: #f5f5f5;
  border: solid #f5f5f5 2rpx;
}

.content_frequency_service_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #f00;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.content_lesson_introduction_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  letter-spacing: 2rpx;
  margin: 20rpx;
}

.footer_view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: space-around;
  align-items: center;
  justify-content: space-around;
  justify-items: center;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.footer_view_phonenum_text {
  width: 300rpx;
  font-size: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: #fff;
  text-align: center;
  border-radius: 40rpx;
  background-color: #7b80f6;
  font-weight: 600;
}

.footer_view_purchase_text {
  font-size: 40rpx;
  color: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 40rpx;
  background-color: #fe8ba8;
  width: 300rpx;
  text-align: center;
  font-weight: 600;
}

.dialogVisible_tip_text {
  font-size: 30rpx;
  color: #666;
  font-weight: 400;
}
