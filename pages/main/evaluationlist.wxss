page {
  background-color: #f5f5f5;
  height: 100%;
}

.parent {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  width: 100%;
  height: 100%;
}

.content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
}

.content_item_view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  border-radius: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
  margin-left: 20rpx;
  margin-right: 20rpx;
  box-shadow: 0rpx 2rpx 2rpx 2rpx #f5f5f5; /*for Android*/
  -webkit-box-shadow: 0px 2px 2px 2px #f5f5f5; /*for IOS*/
}

.item_left_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  flex-grow: 1;
  padding: 20rpx;
}

.item_right_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  align-content: center;
  align-items: center;
  justify-content: center;
  justify-items: center;
}

.space_view {
  height: 2rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
}

.item_view_text {
  font-size: 34rpx;
  font-weight: 600;
  color: #6d6e8c;
}

.item_view_tip_text{
  font-size: 24rpx;
  font-weight: 400;
  color: #fff;
}

.item_view_img {
  width: 22rpx;
  height: 46rpx;
}

.content_view_text {
  font-size: 26rpx;
  font-weight: 400;
  color: #9d9fb7;
}

.prompt_text {
  font-size: 30rpx;
  font-weight: 400;
  padding-top: 200rpx;
  text-align: center;
  color: #999;
}


