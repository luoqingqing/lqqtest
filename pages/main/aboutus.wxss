/* 关于我们 */

.tip_view_aboutus, .bg {
  width: 100%;
  height: 330rpx;
}

.img {
  width: 100%;
  height: 330rpx;
}

.bg {
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
}

.view_about {
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  margin-top: 38rpx;
  width: 65%;
  height: 60%;
  color: #fff;
  border: 5rpx solid #fff;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
}

.main {
  margin-top: 34rpx;
  font-size: 55rpx;
}

.en {
  font-size: 35rpx;
  margin-top: 34rpx;
}

/* 公司简介、、、、 */

.tip_view_all {
