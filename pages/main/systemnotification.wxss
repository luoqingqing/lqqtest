page {
  background-color: #f5f5f5;
  height: 100%;
}

.parent {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  width: 100%;
  height: 100%;
}

.content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
}

.item_view {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  background-color: #fff;
}

.item_header_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  padding: 20rpx;
}

.item_header_view_title_text {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.item_header_view_time_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #999;
}

.item_space {
  width: 100%;
  height: 2rpx;
  background-color: #f5f5f5;
}

.item_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #666;
  margin: 20rpx;
}

.view_bg {
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}

.prompt_text {
  font-size: 30rpx;
  font-weight: 400;
  padding-top: 200rpx;
  text-align: center;
  color: #999;
}
