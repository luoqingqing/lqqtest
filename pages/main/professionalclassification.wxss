page {
  background-color: #f5f5f5;
  height: 100%;
}

.parent {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
}

.header {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding: 10rpx;
  height: 80rpx;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  background-color: #f5f5f5;
  top: 0rpx;
  right: 0rpx;
  left: 0rpx;
}

.picker_view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-right: 20rpx;
  align-items: center;
  justify-content: center;
  align-content: center;
  flex-grow: 0;
}

.picker_view_view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
  align-content: center;
}

.header_view_text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.hd_view {
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: red;
  border-style: solid;
  margin-left: 10rpx;
  transform: rotate(135deg);
}

.header_view_search {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  flex-grow: 1;
}

.header_view_search_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #666;
}

.content_view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-top: 100rpx;
}

.content_view_left {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  flex-grow: 0;
}

.content_view_content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  flex-grow: 1;
}

.content_view_left_not_selceted_text {
  width: 200rpx;
  padding: 20rpx;
  font-size: 30rpx;
  font-weight: 400;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #fff;
  color: #333;
}

.content_view_left_selceted_text {
  width: 200rpx;
  padding: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  background-color: #8087f5;
  margin-left: 20rpx;
  margin-right: 20rpx;
  color: #fff;
}

.content_view_content_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  padding: 20rpx;
  background-color: #fff;
}

.content_view_content_view_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
}

.content_view_content_view_img {
  width: 20rpx;
  height: 20rpx;
}
