<view class='space_height_two_view'></view>
<scroll-view class='sc_view'>
  <view class='parent'>

    <view class='header_view'>
      <image class='header_img' src="{{lessonImg}}"></image>
      <view class='header_view_view'>
        <text class='header_view_text'>{{lessonName}}</text>
      </view>

      <view class='space_view' />
      <view class='content_view_flag_view'>
        <view class='content_view_flag_view_space' />
        <text class='content_view_flag_view_text'>测评</text>
      </view>
      <scroll-view scroll-x="false" class='sc'>
        <view class='header_evaluation_view'>
          <view wx:for="{{evaluationdata}}">
            <view class='header_evaluation_details_view' data-index='{{index}}' bindtap='evaluationItemClick'>
              <view class='item_left_view '>
                <text class='item_view_text '>{{item.name}}</text>
                <view class='space_view '></view>
                <text class='content_view_text '>学生测评</text>
              </view>

              <view class='item_right_view ' style='background: #a5a9f2;'>
                <image class='item_view_img' src='../resources/white_go.png' wx:if='{{item.state==0}}'></image>
                <text class='item_view_tip_text' wx:if='{{item.state==1}}'>已\n完\n成</text>
              </view>
            </view>
          </view>
        </view>
      </scroll-view>

    </view>

    <i-modal visible="{{ dialogVisible }}" actions="{{ actions }}" bind:click="actionsClick">
      <view style='padding:20rpx;'>
        <text class='dialogVisible_tip_text'>您当前身份无法免费预约该课程。您可以选择单独购买该课程或者升级套餐再进行预约</text>
      </view>
    </i-modal>

    <view class='content_view'>
      <view class='space_view' />
      <view class='content_view_flag_view'>
        <view class='content_view_flag_view_space' />
        <text class='content_view_flag_view_text'>简介</text>
      </view>
      <text class='content_lesson_introduction_text'>{{lessonIntroduction}}</text>

      <view class='space_view' />
      <view class='content_view_flag_view'>
        <view class='content_view_flag_view_space' />
        <text class='content_view_flag_view_text'>时间</text>
      </view>
      <text class='content_lesson_introduction_text'>{{startClassTime}}</text>

      <view class='space_view' />
      <view class='content_view_flag_view'>
        <view class='content_view_flag_view_space' />
        <text class='content_view_flag_view_text'>地址</text>
      </view>
      <text class='content_lesson_introduction_text'>{{address}}</text>

