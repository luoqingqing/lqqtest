page {
  background-color: #f5f5f5;
  height: 100%;
}

.parent {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  width: 100%;
  height: 100%;
}

.content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  margin-top: 2rpx;
}

.view_bg {
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}

.item_view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  height: 260rpx;
  padding: 20rpx;
  background-color: #fff;
}

.item_view_view_one {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 100%;
  margin-top: 10rpx;
}

.item_view_view_two {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 100%;
  margin-top: 20rpx;
}

.item_view_one {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  margin-left: 20rpx;
  margin-top: 10rpx;
  width: 100%;
}

.item_img {
  width: 260rpx;
  height: 100%;
}

.item_title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  width: 480rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.item_text {
  font-size: 30rpx;
  font-weight: 400;
  width: 300rpx;
  color: #333;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.item_prompt_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #999;
}

.prompt_text {
  font-size: 30rpx;
  font-weight: 400;
  background-color: #fff;
  padding-top: 200rpx;
  text-align: center;
  color: #999;
}

.operation_view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 100%;
  margin-top: 10rpx;
}

.cancel_collection{
  background-color: #8087f5;
  font-size: 20rpx;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
  padding-left: 36rpx;
  padding-right: 36rpx;
  color: #fff;
  border-radius: 10rpx;
}

