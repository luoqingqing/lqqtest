page {
  background-color: #f5f5f5;
  height: 100%;
}

.parent {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.header_view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}

.header_view_tip_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #999;
}

.header_view_text {
  font-size: 34rpx;
  font-weight: 400;
  color: #8087f5;
}

.tip_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #999;
  margin-top: 40rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.text {
  font-size: 34rpx;
  font-weight: 400;
  color: #333;
  padding: 20rpx;
  background-color: #fff;
  border: solid #f5f5f5 2rpx;
}

.input {
  font-size: 34rpx;
  font-weight: 400;
  color: #333;
  padding: 20rpx;
  background-color: #fff;
}

.verifying_code_view{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}

.verifying_code_view_text{
  font-size: 30rpx;
  font-weight: 400;
  width: 260rpx;
  color: #8087f5;
  text-align: center;
  margin-right: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border: solid #8087f5 2rpx;
}

.picker {
  padding: 20rpx;
  background-color: #fff;
}

.picker_view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}

.picker_text {
  font-size: 34rpx;
  font-weight: 400;
  color: #333;
}

.picker_img {
  width: 20rpx;
  height: 20rpx;
}

.button {
  margin-top: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  background-color: #8087f5;
  font-size: 30rpx;
  color: #fff;
}

.btn_hover {
  background-color: #f5f5f5;
}
