page {
  background-color: #f5f5f5;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.sc_view {
  background-color: #fff;
}

.parent {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.space_view {
  width: 100%;
  height: 2rpx;
  background-color: #f5f5f5;
}

.header_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.header_img {
  width: 100%;
  height: 400rpx;
}

.header_view_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}

.sc {
  display: flex;
  white-space: nowrap;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
}

.header_view_text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin: 20rpx;
}

.header_view_img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.header_number_view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.header_number_not_selected_text {
  font-size: 30rpx;
  font-weight: 400;
  border-radius: 2%;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: #8087f5;
  margin: 20rpx;
  background: #fff;
  border: solid #8087f5 2rpx;
}

.header_number_selected_text {
  font-size: 30rpx;
  font-weight: 400;
  border-radius: 2%;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: #fff;
  margin: 20rpx;
  background: #8087f5;
  border: solid #8087f5 2rpx;
}

.dialogVisible_tip_text {
  font-size: 30rpx;
  color: #666;
  font-weight: 400;
}

.content_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.content_view_flag_view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-left: 20rpx;
  align-items: center;
}

.content_view_flag_view_space {
  width: 10rpx;
  height: 30rpx;
  background-color: #8087f5;
}

.content_view_flag_view_text {
  font-size: 26rpx;
  font-weight: 400;
  color: #666;
  margin-left: 20rpx;
}

.content_frequency_service_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #f00;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.content_lesson_introduction_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  letter-spacing: 2rpx;
  margin: 20rpx;
}

.content_lesson_primary_coverage_text {
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
}

.footer_button {
  text-align: center;
  background-color: #8087f5;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #fff;
  margin: 40rpx;
}

.btn_hover {
  background-color: #f5f5f5;
}
