page {
  background-color: #f5f5f5;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.sc_view {
  background-color: #fff;
}

.slide_image {
  width: 100%;
  height: 420rpx;
}

.content_view {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
}

.content_view_view {
  position: relative;
  overflow: hidden;
  width: 750rpx;
}

.content_view_view_view {
  position: relative;
  float: left;
  padding: 40rpx;
  width: 50%;
  border-width: 1rpx;
  border-style: solid;
  border-color: #f5f5f5;
  background-color: #fff;
  box-sizing: border-box;
}

.content_view_view_view_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.content_view_view_view_view_text {
  font-size: 36rpx;
  font-weight: 800;
  color: 393939;
}

.content_view_view_view_view_view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.content_view_view_view_view_view_view {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  flex-grow: 1;
}

.content_view_view_view_view_view_view_intro_text {
  font-size: 30rpx;
  color: #8c8c8c;
  font-weight: 400;
}

.content_view_view_view_view_view_view_price_text {
  font-size: 30rpx;
  color: #ff7995;
  font-family:Arial;
  font-weight: 400;
}

.content_view_view_view_view_view_view_know_text {
  font-size: 24rpx;
  width: 120rpx;
  color: #fff;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
  text-align: center;
  margin-top: 10rpx;
  border-radius: 10rpx;
  font-weight: 400;
}

.content_view_view_view_view_view_img {
  width: 100rpx;
  height: 100rpx;
}

.footer_view {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;
  padding: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0rpx 2rpx 2rpx 2rpx #f5f5f5; /*for Android*/
  -webkit-box-shadow: 0px 2px 2px 2px #f5f5f5; /*for IOS*/
  flex-wrap: nowrap;
}

.footer_view_view {
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  justify-items: center;
  justify-content: center;
  flex-wrap: nowrap;
}

.footer_img {
  width: 100rpx;
  height: 100rpx;
}

.footer_text {
  font-size: 30rpx;
  font-weight: 400;
  margin-top: 20rpx;
  color: #333;
}
